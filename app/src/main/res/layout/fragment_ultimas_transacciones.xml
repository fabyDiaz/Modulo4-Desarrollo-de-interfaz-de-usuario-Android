            <!-- Tarjeta Yara -->

            <androidx.cardview.widget.CardView
                android:id="@+id/tarjetaYara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imagenYara"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:src="@mipmap/pp2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtYaraMovimiento"
                        style="@style/letra_negra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:text="Yara Khalil"
                        app:layout_constraintStart_toEndOf="@+id/imagenYara"
                        app:layout_constraintTop_toTopOf="@+id/imagenYara"

                        />

                    <TextView
                        android:id="@+id/txtfechaYara"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 14, 10:24 AM"
                        android:textColor="@color/semiblackOpacity"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imagenYara"
                        app:layout_constraintStart_toStartOf="@+id/txtYaraMovimiento"
                        app:layout_constraintTop_toBottomOf="@+id/txtYaraMovimiento" />

                    <ImageView
                        android:id="@+id/IconoEnvioYara"
                        style="@style/icono_ingreso_envio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/send_icon_yellow"
                        app:layout_constraintBottom_toBottomOf="@+id/imagenYara"
                        app:layout_constraintEnd_toEndOf="@+id/imagenYara"
                        app:layout_constraintStart_toStartOf="@+id/imagenYara"
                        app:layout_constraintTop_toTopOf="@+id/imagenYara" />

                    <TextView
                        android:id="@+id/MontoEnvioYara"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:text="-$15.00"
                        android:textColor="@color/semiblack"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

